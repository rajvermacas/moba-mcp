# ============================================================================
# MCP SERVER CONFIGURATION
# ============================================================================

# MCP Server URL - Parses host and port from URL if provided
# This takes precedence over individual HOST and PORT settings
MCP_SERVER_URL=http://localhost:8002

# Individual host and port settings (optional - overridden by MCP_SERVER_URL)
# HOST=localhost
# PORT=8002

# Transport type: stdio, sse, or streamable-http
TRANSPORT=sse

# Database configuration
DATABASE_PATH=test_data/sample.db
METADATA_PATH=resources/metadata.json

# Server identification
SERVER_NAME=moba-mcp
SERVER_VERSION=0.1.0

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Enable stateless HTTP mode (no session persistence)
STATELESS_HTTP=false

# Use JSON responses instead of SSE streams (for streamable-http)
JSON_RESPONSE=false

# Query limits
MAX_QUERY_LENGTH=10000
MAX_RESULT_ROWS=1000